<script>
const scores = new Array(13).fill(null);
const labels = [
  'Net Worth','Income Diversification','Asset Concentration','Debt Ratio',
  'Immigration Status','Emergency Fund','Insurance','Estate Planning',
  'Career Trajectory','Country Optionality','Currency Alignment',
  'India Readiness','Future Obligations'
];

let fearValue = 5;
const activeFlags = new Set(['h1b']); // h1b pre-checked

function select(qIndex, pts, el) {
  // deselect siblings
  const card = document.getElementById('qcard-' + qIndex);
  card.querySelectorAll('.opt').forEach(o => {
    o.className = 'opt';
  });
  // select this
  el.classList.add('selected-' + pts);
  scores[qIndex] = pts;
  card.classList.add('answered');
  updateLive();
}

function updateLive() {
  const answered = scores.filter(s => s !== null).length;
  const rawScore = scores.reduce((a, b) => a + (b || 0), 0);
  const fearPenalty = fearValue >= 8 ? 5 : 0;
  const fragMult = activeFlags.size >= 3 ? 0.8 : 1.0;
  const finalScore = Math.round((rawScore - fearPenalty) * fragMult);

  document.getElementById('scoreLive').textContent = Math.max(0, finalScore);
  const pct = Math.min(100, (finalScore / 130) * 100);
  const fill = document.getElementById('progressFill');
  fill.style.width = pct + '%';
  fill.style.background = pct > 70 ? '#3d9e5f' : pct > 45 ? '#d4a017' : pct > 25 ? '#c0622a' : '#b03030';

  const liveEl = document.getElementById('scoreLive');
  liveEl.style.color = pct > 70 ? '#52c97a' : pct > 45 ? '#f0be2e' : pct > 25 ? '#e07840' : '#d44444';

  document.getElementById('answeredCount').textContent = answered + ' of 13 answered';
}

function updateFear(val) {
  fearValue = parseInt(val);
  const d = document.getElementById('fearDisplay');
  d.textContent = val;
  d.style.color = val >= 8 ? '#d44444' : val >= 6 ? '#e07840' : val >= 4 ? '#f0be2e' : '#52c97a';
  const pen = document.getElementById('fearPenalty');
  pen.textContent = val >= 8 ? '‚ö†Ô∏è ‚àí5 penalty applied to your final score' : 'Score above 7 triggers a ‚àí5 point penalty';
  pen.style.color = val >= 8 ? '#d44444' : '#7a8499';
  updateLive();
}

function toggleFlag(el, id) {
  const check = document.getElementById('flag-' + id);
  if (activeFlags.has(id)) {
    activeFlags.delete(id);
    el.classList.remove('active');
    check.textContent = '';
  } else {
    activeFlags.add(id);
    el.classList.add('active');
    check.textContent = '‚úì';
  }
  const mult = document.getElementById('multiplierDisplay');
  if (activeFlags.size >= 3) {
    mult.innerHTML = `<strong>√ó 0.8 Fragility Multiplier active</strong> ‚Äî ${activeFlags.size} risk flags detected. Final score reduced by 20%.`;
    mult.style.color = '#e07840';
  } else {
    mult.innerHTML = `${activeFlags.size} of 3 flags needed to trigger multiplier`;
    mult.style.color = '#7a8499';
  }
  updateLive();
}

// init first flag display
document.getElementById('flag-h1b').textContent = '‚úì';
document.getElementById('flag-h1b').closest('.flag-item').classList.add('active');

function calculate() {
  const answered = scores.filter(s => s !== null).length;
  if (answered < 10) {
    alert('Please answer at least 10 questions for an accurate score.');
    return;
  }

  const rawScore = scores.reduce((a, b) => a + (b || 0), 0);
  const fearPenalty = fearValue >= 8 ? 5 : 0;
  const fragMult = activeFlags.size >= 3 ? 0.8 : 1.0;
  const finalScore = Math.max(0, Math.round((rawScore - fearPenalty) * fragMult));

  const card = document.getElementById('resultCard');
  const banner = document.getElementById('resultBanner');

  let label, desc, color, bgColor;
  if (finalScore >= 100) {
    label = 'Financially Sovereign'; color = '#52c97a'; bgColor = 'rgba(61,158,95,0.15)';
    desc = 'You have built real resilience ‚Äî across assets, borders, and scenarios. The goal now is to protect and transfer wealth, not just accumulate it.';
  } else if (finalScore >= 70) {
    label = 'Still Building'; color = '#f0be2e'; bgColor = 'rgba(212,160,23,0.12)';
    desc = 'Solid foundation with identifiable gaps. The categories where you scored 0-2 are where your financial life is most exposed. Address them one by one.';
  } else if (finalScore >= 40) {
    label = 'Exposed'; color = '#e07840'; bgColor = 'rgba(192,98,42,0.12)';
    desc = 'One bad event ‚Äî a layoff, a health crisis, a visa issue ‚Äî could unwind years of work. The structure exists, but the protection is thin.';
  } else {
    label = 'One Crisis Away'; color = '#d44444'; bgColor = 'rgba(176,48,48,0.15)';
    desc = 'This score is a signal, not a judgment. Most NRIs who score here simply haven\'t had time to address what they haven\'t had to face yet. Now you know where to start.';
  }

  banner.style.background = `linear-gradient(135deg, ${bgColor}, rgba(19,22,28,0) 70%)`;
  banner.style.color = color;
  document.getElementById('resultVerdict').textContent = 'YOUR SCORE';
  document.getElementById('resultScoreBig').innerHTML = finalScore + '<span class="result-max"> / 130</span>';
  document.getElementById('resultScoreBig').style.color = color;
  document.getElementById('resultLabel').textContent = label;
  document.getElementById('resultLabel').style.color = color;
  document.getElementById('resultDesc').textContent = desc;

  // breakdown
  const grid = document.getElementById('breakdownGrid');
  grid.innerHTML = '';
  scores.forEach((s, i) => {
    if (s === null) return;
    const pct = (s / 10) * 100;
    const fillColor = s >= 8 ? '#3d9e5f' : s >= 5 ? '#d4a017' : s >= 2 ? '#c0622a' : '#b03030';
    grid.innerHTML += `
      <div class="breakdown-item">
        <div class="bi-label">${labels[i]}</div>
        <div class="bi-score" style="color:${fillColor}">${s}/10</div>
        <div class="bi-bar"><div class="bi-fill" style="width:${pct}%;background:${fillColor}"></div></div>
      </div>`;
  });

  card.classList.add('visible');
  setTimeout(() => card.scrollIntoView({behavior: 'smooth', block: 'start'}), 100);
}

function copyScore() {
  const answered = scores.filter(s => s !== null).length;
  const rawScore = scores.reduce((a, b) => a + (b || 0), 0);
  const fearPenalty = fearValue >= 8 ? 5 : 0;
  const fragMult = activeFlags.size >= 3 ? 0.8 : 1.0;
  const finalScore = Math.max(0, Math.round((rawScore - fearPenalty) * fragMult));

  const weakest = scores.reduce((minIdx, s, i) => (s !== null && (scores[minIdx] === null || s < scores[minIdx])) ? i : minIdx, 0);

  const text = `I scored ${finalScore}/130 on the NRI Scorecard (r/RupeeStories)\n\nWeakest category: ${labels[weakest]} (${scores[weakest]}/10)\n\nHow did you score? ‚Üí rupeestories.com/scorecard`;
  navigator.clipboard.writeText(text).then(() => {
    const btn = document.querySelector('.copy-btn');
    btn.textContent = 'Copied! ‚úì';
    setTimeout(() => btn.textContent = 'Copy Score to Share', 2000);
  });
}

// init fear display
updateFear(5);
updateLive();
</script>
